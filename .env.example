# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# If DB_NAME is set, Django uses PostgreSQL. Otherwise, it falls back to SQLite.
# 
# For PostgreSQL (recommended for production and performance testing):
DB_NAME=gts_scheduler
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
#
# To use SQLite instead, comment out or remove DB_NAME above.

# Time Zone
TIME_ZONE=America/New_York

# OpenAI API Key (for AI-powered calendar import parsing)
OPENAI_API_KEY=your-openai-api-key-here

# Accounting Integration (optional; for Classic Accounting database access)
# If ACCOUNTING_DB_NAME is set, Django will connect to the accounting PostgreSQL database.
# Otherwise, it falls back to a local SQLite file for testing/CI.
#ACCOUNTING_DB_NAME=classic_accounting
#ACCOUNTING_DB_USER=postgres
#ACCOUNTING_DB_PASSWORD=your_accounting_password_here
#ACCOUNTING_DB_HOST=localhost
#ACCOUNTING_DB_PORT=5432

# Calendar Cache TTL (optional; defaults to 30 seconds)
# Controls how long calendar events are cached for improved performance
#CALENDAR_EVENTS_CACHE_TTL=30


